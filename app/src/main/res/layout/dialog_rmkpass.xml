<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bac">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐỔI MẬT KHẨU"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#fff"
        android:fontFamily="@font/casteler"
        android:padding="20dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập Mật Khẩu Hiện Tại"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></TextView>
        <EditText
            android:id="@+id/edt_password_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập Mật Khẩu Mới"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></TextView>
        <EditText
            android:id="@+id/edt_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác Nhận Lại Mật Khẩu Mới"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></TextView>
        <EditText
            android:id="@+id/edt_passwordnewrmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_updatePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/cafecreate"
            android:text="Update"
            android:textColor="#fff"></Button>
        <Button
            android:id="@+id/btn_cancelPass"
            android:background="@drawable/cafecreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancle"
            android:textColor="#fff"></Button>
    </LinearLayout>
</LinearLayout>