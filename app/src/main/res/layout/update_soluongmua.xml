<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_oder_item">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thay Đổi Số Lượng Mua"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="15dp"
        android:fontFamily="@font/casteler"></TextView>
    <EditText
        android:id="@+id/soluong_muahang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:gravity="center"></EditText>
    <Button
        android:id="@+id/btn_thaydoi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Thay Đổi"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        ></Button>
</LinearLayout>