<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.Add_Account_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bac">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:textColor="#fff"
            android:textSize="20dp"
            android:fontFamily="@font/casteler"
            android:padding="20dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/img_avatar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/photocamera"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avatar User"
                    android:textColor="#fff"
                    android:textSize="20dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="#fff"
                    android:textSize="20dp"></TextView>
                <EditText
                    android:id="@+id/txt_username1"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter full information ..."
                    android:textColorHint="#7E7B7B"
                    android:textSize="20dp"
                    android:drawableStart="@drawable/avatar"
                    android:drawablePadding="10dp"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#fff"
                    android:textSize="20dp"></TextView>
                <EditText
                    android:id="@+id/txt_email1"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter full information ..."
                    android:textColorHint="#7E7B7B"
                    android:textSize="20dp"
                    android:drawableStart="@drawable/identification"
                    android:drawablePadding="10dp"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#fff"
                    android:textSize="20dp"></TextView>
                <EditText
                    android:id="@+id/txt_phone1"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter full information ..."
                    android:textColorHint="#7E7B7B"
                    android:textSize="20dp"
                    android:inputType="phone"
                    android:drawableStart="@drawable/phonecall"
                    android:drawablePadding="10dp"></EditText>
            </LinearLayout>
            <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#fff"
                android:textSize="20dp"></TextView>
            <EditText
                android:id="@+id/txt_password1"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter full information ..."
                android:textColorHint="#7E7B7B"
                android:textSize="20dp"
                android:inputType="phone"
                android:drawableStart="@drawable/viewwhite"
                android:drawablePadding="10dp"></EditText>
        </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remake Password"
                    android:textColor="#fff"
                    android:textSize="20dp"></TextView>
                <EditText
                    android:textColor="#fff"
                    android:id="@+id/remakePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter full information ..."
                    android:textColorHint="#7E7B7B"
                    android:textSize="20dp"
                    android:inputType="phone"
                    android:drawableStart="@drawable/viewwhite"
                    android:drawablePadding="10dp"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Position"
                    android:textColor="#fff"
                    android:textSize="20dp"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/thungan1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thu Ngân"
                            android:onClick="onRadioButtonClicked"
                            android:textColor="#ffff"
                            tools:ignore="OnClick"></RadioButton>
                        <RadioButton
                            android:id="@+id/phache1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pha Chế"
                            android:onClick="onRadioButtonClicked"
                            android:textColor="#ffff"
                            tools:ignore="OnClick"></RadioButton>
                        <RadioButton
                            android:id="@+id/quanlykho1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quản Lý Kho"
                            android:onClick="onRadioButtonClicked"
                            android:textColor="#ffff"
                            tools:ignore="OnClick"></RadioButton>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:padding="5dp">
                <Button
                    android:id="@+id/btn_adduser1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cafecreate"
                    android:text="Add"
                    android:textColor="#fff"></Button>
                <Button
                    android:id="@+id/btn_cancleuser1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cafecreate"
                    android:text="Cancle"
                    android:textColor="#fff"></Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
