<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thanh Toán"
        android:textColor="#ffff"
        android:gravity="center"
        android:background="#000000"
        android:fontFamily="@font/bell"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tensp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/giasp"
        android:textColor="#000000"
        android:textSize="20dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soluongsp"
        android:textColor="#000000"
        android:textSize="20dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tongtiensp"
        android:textColor="#000000"
        android:textSize="20dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ngaymuasp"
        android:textColor="#000000"
        android:textSize="20dp">

    </TextView>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_height="350dp"
        android:background="@drawable/bg_bill">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Tên Sản Phẩm:"
                android:textColor="#000000"
                android:fontFamily="@font/bell"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:layout_height="50dp"
                android:layout_marginLeft="200dp"
                android:fontFamily="@font/bell"
                android:hint="Tên"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20dp" />


            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Giá Sản Phẩm:"
                android:fontFamily="@font/bell"
                android:textColor="#000000"></TextView>
            <TextView
                android:id="@+id/tv_money"
                android:layout_marginTop="60dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:fontFamily="@font/bell"
                android:hint="Giá"
                android:layout_marginLeft="200dp"
                android:textColorHint="#000000"
                android:layout_width="200dp"
                android:layout_height="50dp" />
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_marginTop="100dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:fontFamily="@font/bell"
                android:text="Mô Tả:"
                android:textColor="#000000"></TextView>
            <TextView
                android:id="@+id/tv_mt"
                android:layout_marginTop="100dp"
                android:layout_width="200dp"
                android:layout_marginLeft="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_money"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Mô Tả"
                android:textColorHint="#000000"
                android:fontFamily="@font/bell"/>


            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_marginTop="150dp"
                android:layout_height="50dp"
                android:text="Ngày Mua"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>
            <TextView
                android:id="@+id/tvngaymua"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ed_soluong"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="150dp"
                android:hint="Ngày"
                android:textColor="#000000"
                android:textSize="20dp" />



            <EditText
                android:id="@+id/ed_soluong"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="190dp"
                android:layout_below="@+id/tv_mt"
                android:layout_weight="1"
                android:fontFamily="@font/bell"
                android:hint="Nhập Số Lượng:"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#3D0202"
                android:textSize="20dp" />


        <Button
            android:id="@+id/btn_chon"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvngaymua"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/btn_thanhtoan"
            android:text="Bill"
            android:textColor="#ffff" />
        <Button
            android:id="@+id/btn_huy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvngaymua"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/btn_thanhtoan"
            android:text="Cancel"
            android:textColor="#ffff"/>


    </FrameLayout>


</LinearLayout>